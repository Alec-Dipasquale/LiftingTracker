<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.squale.liftingtracker">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/lifting_logo"
            android:label="@string/app_name"
            android:roundIcon="@drawable/lifting_logo"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".UserStatistics"/>
        <activity android:name=".activity.RegisterActivity"/>
        <activity android:name=".Calculator"/>
        <activity android:name=".PersonalRecordSettings"/>
        <activity android:name=".activity.AllPRsActivity"/>
        <activity android:name=".Pop"/>
        <activity
                android:name=".activity.HomeActivity"
                android:theme="@style/AppTheme">
        </activity>
        <activity android:name=".activity.WorkoutActivity">
        </activity>
        <activity
                android:name="com.squale.liftingtracker.AppOverlay"
                android:theme="@style/AppTheme.popUpTheme"/>
        <activity android:name="com.squale.liftingtracker.ExercisePopWindow">
        </activity>
    </application>

</manifest>